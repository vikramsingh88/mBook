<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/text_lbl_donate_quote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/donate_quote"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_lbl_book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Book Title" />

            <EditText
                android:id="@+id/edit_book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_lbl_book_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book Author" />

            <EditText
                android:id="@+id/edit_book_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_lbl_book_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book Quantity" />

            <EditText
                android:id="@+id/edit_book_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"/>

            <ImageView
                android:id="@+id/img_book"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_capture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_button_selector"
                android:text="Capture Picture"
                android:textColor="@drawable/bg_button_selector"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>